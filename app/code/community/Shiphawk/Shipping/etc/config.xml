<?xml version="1.0"?>
<config>
    <modules>
        <Shiphawk_Shipping>
            <version>0.7.0</version>
        </Shiphawk_Shipping>
    </modules>
    <global>
        <models>
            <shiphawk_shipping>
                <class>Shiphawk_Shipping_Model</class>
            </shiphawk_shipping>
        </models>
        <blocks>
            <shiphawk_shipping>
                <class>Shiphawk_Shipping_Block</class>
            </shiphawk_shipping>
            <adminhtml>
                <rewrite>
                    <sales_order_view>Shiphawk_Shipping_Block_Adminhtml_Sales_Order_View</sales_order_view>
                </rewrite>
            </adminhtml>
        </blocks>
        <resources>
            <shiphawk_setup>
                <setup>
                    <module>Shiphawk_Shipping</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </shiphawk_setup>
        </resources>
        <helpers>
            <shiphawk_shipping>
                <class>Shiphawk_Shipping_Helper</class>
            </shiphawk_shipping>
        </helpers>
        <events>
            <admin_system_config_changed_section_carriers>
                <observers>
                    <shiphawk_shipping>
                        <type>singleton</type>
                        <class>shiphawk_shipping/observer</class>
                        <method>configSaveAfter</method>
                    </shiphawk_shipping>
                </observers>
            </admin_system_config_changed_section_carriers>
            <catalog_product_load_after>
                <observers>
                    <shiphawk_shipping>
                        <type>singleton</type>
                        <class>shiphawk_shipping/observer</class>
                        <method>lockAttributes</method>
                    </shiphawk_shipping>
                </observers>
            </catalog_product_load_after>
            <checkout_onepage_controller_success_action>
                <observers>
                    <shiphawk_shipping>
                        <type>singleton</type>
                        <class>shiphawk_shipping/observer</class>
                        <method>saveShipHawkId</method>
                    </shiphawk_shipping>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
        <fieldsets>
            <sales_convert_quote>
                <shiphawk_api_id>
                    <to_order>*</to_order>
                </shiphawk_api_id>
            </sales_convert_quote>
            <sales_convert_quote_item>
                <shiphawk_api_id>
                    <to_order_item>*</to_order_item>
                </shiphawk_api_id>
            </sales_convert_quote_item>
        </fieldsets>
    </global>
    <frontend>
        <routers>
            <Shiphawk_Shipping>
                <use>standard</use>
                <args>
                    <module>Shiphawk_Shipping</module>
                    <frontName>shiphawk</frontName>
                </args>
            </Shiphawk_Shipping>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <shiphawk_shipping before="Mage_Adminhtml">Shiphawk_Shipping_Adminhtml</shiphawk_shipping>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <carriers>
            <shiphawk_shipping>
                <active>1</active>
                <required_attribute>0</required_attribute>
                <sort_order>10</sort_order>
                <model>shiphawk_shipping/carrier</model>
                <title>Shiphawk Shipping Carrier</title>
                <item_is_packed>1</item_is_packed>
                <sort_order>10</sort_order>
                <sallowspecific>1</sallowspecific>
                <express_max_weight>3</express_max_weight>
            </shiphawk_shipping>
        </carriers>
    </default>
</config>